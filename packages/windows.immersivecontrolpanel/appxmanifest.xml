<?xml version="1.0" encoding="utf-8"?>
<Package xmlns="http://schemas.microsoft.com/appx/2010/manifest">
  <Identity Name="windows.immersivecontrolpanel" Publisher="CN=Microsoft Windows, O=Microsoft Corporation, L=Redmond, S=Washington, C=US" Version="6.2.0.0" ResourceId="neutral" />
  <Properties>
    <DisplayName>ms-resource:DisplayName</DisplayName>
    <Description>ms-resource:Description</Description>
    <Logo>images\logo.png</Logo>
    <PublisherDisplayName>ms-resource:PublisherDisplayName</PublisherDisplayName>
  </Properties>

  <Prerequisites>
    <OSMinVersion>6.3.0</OSMinVersion>
    <OSMaxVersionTested>6.3.0</OSMaxVersionTested>
  </Prerequisites>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Applications>
    <Application Id="microsoft.windows.immersivecontrolpanel" StartPage="default.html">
      <VisualElements DisplayName="ms-resource:DisplayName" Description="ms-resource:Description" Square150x150Logo="images/tileSmall.png" Square30x30Logo="images/logo.png" ForegroundText="light" BackgroundColor="#5133AB">
        <SplashScreen Image="images/SplashScreen.png" BackgroundColor="#5133AB" />
        <DefaultTile DefaultSize="square150x150Logo" ShortName="ms-resource:DisplayName" Square70x70Logo="images\tinytile.png">
          <ShowNameOnTiles>
            <ShowOn Tile="square150x150Logo" />
          </ShowNameOnTiles>
        </DefaultTile>
      </VisualElements>
    </Application>
  </Applications>

</Package>
